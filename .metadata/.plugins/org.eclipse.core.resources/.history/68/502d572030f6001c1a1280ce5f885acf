import static utils.Utils.*;

public class TestandoActionSteps {
	
	@Quando("mover o mouse para a aba PIM")
	public void moverOMouseParaAAbaPIM() {
	    Na(BasePage.class).moverMouseParaAbaPim();
	}

	@Quando("mover o mouse para o menu Configuration")
	public void moverOMouseParaOMenuConfiguration() {
		Na(BasePage.class).moverMouseParaMenuConfiguration();
	}

	@Quando("mover o mouse para o menu Custon Field")
	public void moverOMouseParaOMenuCustonField() {
		Na(BasePage.class).moverMouseParaMenuCustomFields();
	}
	
}
